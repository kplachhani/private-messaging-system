{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@api/*": [
                "/*"
            ]
        },
        "types": [
            "reflect-metadata"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ]
}